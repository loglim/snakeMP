        <ToolBar id="toolbar" prefHeight="35.0" prefWidth="506.0" BorderPane.alignment="CENTER">
            <Pane HBox.hgrow="ALWAYS">
                <Label fx:id="hintLabel" layoutX="8.0" layoutY="4.0" text="hintLabel" textFill="#9a9a9a" />
            </Pane>
            <Button fx:id="returnButton" mnemonicParsing="false" onAction="#onReturnButton" prefHeight="25.0" prefWidth="128.0" style="-fx-background-color: #FF6;" text="Return to lobby" visible="false">
